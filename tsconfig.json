{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [ "es2017" ],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true
  },
  "include": [
    "build/wrappers/*.ts",
    "node_modules/**/*/index.d.ts",
    "globals.d.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "types/**/*.d.ts"
  ]
}
